{
  "name": "oslo-specificationgenerator",
  "description": "Contains various packages to generate the artefacts needed by the OSLO Toolchain",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/informatievlaanderen/OSLO-SpecificationGenerator.git"
  },
  "keywords": [
    "semantic",
    "web",
    "open",
    "standards"
  ],
  "author": "Digitaal Vlaanderen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/informatievlaanderen/OSLO-SpecificationGenerator/issues"
  },
  "homepage": "https://github.com/informatievlaanderen/OSLO-SpecificationGenerator#readme",
  "private": true,
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\\\.|/)(test|spec))-test.ts$",
    "roots": [
      "<rootDir>/lib"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFilesAfterEnv": [
      "./setup-jest.js"
    ],
    "collectCoverage": false,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/mocks/",
      "index.js"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push" : "npm run test"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "build:ts": "tsc -b",
    "lint": "eslint . --ext .ts --cache",
    "lint:fix": "eslint . --ext .ts --cache --fix",
    "clean": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "eslint": "^7.32.0",
    "eslint-config-es": "^3.30.15",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-unused-imports": "^1.1.4",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
